{% extends 'base.html.twig' %}

{% block title %}
	{{ parent() }}
	- ARTICLES
{% endblock %}

{% block body %}
	{# {% if error %}
																																																				{{ error }}
																																																			{% endif %} #}

	{{ dump(pagination) }}


	{% for article in articles %}

		<div class="card w-75">
			<div class="card-body">
				<h5 class="card-title">{{ article.title }}</h5>
				{# <h6 class="card-title">{{ article.date.date|date('d/m/Y') }}</h6>
																																																				<p class="card-text">
																																																					{{ article.author }}
																																																				</p>
																																																				<a href=" {{ path('app_article', {'id': article.id}) }} " class="btn btn-primary">Article</a> #}
			</div>
		</div>
	{% endfor %}
	<nav aria-label="Page navigation">
		<ul class="pagination">
			{% if pagination.currentPage > 1 %}
				<li class="page-item">
					<a class="page-link" href="{{ path('app_home', {'page': pagination.itemsPerPage - 1}) }}" aria-label="Previous">
						<span aria-hidden="true">&laquo;</span>
					</a>
				</li>
			{% endif %}

			{% for page in 1..pagination.totalItems /10 %}
				<li class="page-item {% if page == pagination.currentPage %}active{% endif %}">
					<a class="page-link" href="{{ path('app_home', {'page': page}) }}">{{ page }}</a>
				</li>
			{% endfor %}

			{% if pagination.currentPage < pagination.totalItems %}
				<li class="page-item">
					<a class="page-link" href="{{ path('app_home', {'page': pagination.currentPage + 1}) }}" aria-label="Next">
						<span aria-hidden="true">&raquo;</span>
					</a>
				</li>
			{% endif %}
		</ul>
	</nav>

{% endblock %}
