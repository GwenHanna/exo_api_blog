{# Cette directive indique que ce fichier Twig étend un autre modèle  #}
{% extends 'base.html.twig' %} 	


{% block title %}
	{{ parent() }}
	- ARTICLES		{# Ajout du suffixe "- ARTICLES" au titre de la page #}
{% endblock %}

{% block body %}

	{% for article in articles %}

		<div class="card w-75">
			<div class="card-body">
				{# Affichage du titre de l'article avec un lien vers sa page individuelle #}
				<a href="/article/{{article.id}}"><h5 class="card-title">{{ article.title }}</h5></a>	
			</div>
		</div>
	{% endfor %}

{% endblock %}
